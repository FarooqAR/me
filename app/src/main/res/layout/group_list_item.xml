<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <com.example.stranger.me.widget.RobotoTextView
            android:id="@+id/item_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Name"
            android:textColor="#8A000000"
            android:textSize="@dimen/abc_text_size_large_material"
            android:textStyle="normal" />

        <com.example.stranger.me.widget.RobotoTextView
            android:id="@+id/item_group_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Description"
            android:textColor="#8A000000"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#8a000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/action_see_group_chat"
                    style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textAllCaps="false"
                    android:textColor="#8a000000" />
                <Button
                    android:id="@+id/action_see_group_members"
                    style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members"
                    android:textAllCaps="false"
                    android:textColor="#8a000000" />

            </LinearLayout>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/action_join_group"
                        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join Group"
                        android:textAllCaps="false"
                        android:textColor="#8a000000" />

                    <ProgressBar
                        android:id="@+id/action_join_group_progress"
                        style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/action_leave_group"
                        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_black_18dp"
                        android:drawableLeft="@drawable/ic_done_gray_18dp"
                        android:drawablePadding="2dp"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_18dp"
                        android:drawableStart="@drawable/ic_done_gray_18dp"
                        android:text="Member"
                        android:textAllCaps="false"
                        android:textColor="#8a000000" />

                    <ProgressBar
                        android:id="@+id/action_leave_group_progress"
                        style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/action_delete_group"
                        style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_black_18dp"
                        android:drawableLeft="@drawable/ic_done_gray_18dp"
                        android:drawablePadding="2dp"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_18dp"
                        android:drawableStart="@drawable/ic_done_gray_18dp"
                        android:text="Admin"
                        android:textAllCaps="false"
                        android:textColor="#8a000000" />

                    <ProgressBar
                        android:id="@+id/action_delete_group_progress"
                        style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/join_group_request_sent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request Sent"
                    android:textColor="#8a000000" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>