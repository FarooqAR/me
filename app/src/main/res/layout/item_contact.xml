<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">
            <com.example.stranger.me.widget.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/item_contact_profile_image"
                android:src="@drawable/ic_account_circle"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:orientation="vertical">
                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_contact_display_name"
                    android:text="Farooq AR"
                    android:textStyle="normal"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textColor="#8A000000"/>
                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_contact_country"
                    android:text="Pakistan"
                    android:textStyle="normal"
                    android:drawableStart="@drawable/ic_location_gray_18dp"
                    android:drawableLeft="@drawable/ic_location_gray_18dp"
                    android:textColor="#8A000000"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#8a000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add as Friend"
                    android:id="@+id/action_send_friend_request"
                    android:textColor="#8a000000"
                    style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                    android:textAllCaps="false"/>
                <ProgressBar
                    android:id="@+id/action_send_friend_request_progress"
                    style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm as Friend"
                    android:id="@+id/action_confirm_friend"
                    android:textColor="#8a000000"
                    style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                    android:textAllCaps="false"/>
                <ProgressBar
                    android:id="@+id/action_confirm_friend_progress"
                    style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8a000000"
                    android:text="Friend"
                    android:id="@+id/action_unfriend"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_done_gray_18dp"
                    android:drawableLeft="@drawable/ic_done_gray_18dp"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_black_18dp"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_18dp"
                    style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
                    android:textAllCaps="false"/>
                <ProgressBar
                    android:id="@+id/action_unfriend_progress"
                    style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friend_request_sent"
                android:textColor="#8a000000"
                android:text="Request Sent"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>