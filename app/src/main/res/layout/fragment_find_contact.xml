<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stranger.me.fragment.FindContactFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_contact_edittext_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <com.example.stranger.me.widget.RobotoEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:singleLine="true"
                android:id="@+id/find_contact_edittext"
                android:textColor="#8a000000"
                android:textColorHint="#8a000000"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_search_gray_24dp"
                android:hint="Find a Contact"
                android:textStyle="normal"
                android:drawableLeft="@drawable/ic_search_gray_24dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/action_find_contact"
                android:src="@drawable/ic_search_gray_24dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_contact_edittext_container"
        android:id="@+id/find_contact_recyclerview"/>
    <ProgressBar
        android:id="@+id/find_contact_progress"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
         android:visibility="gone"/>
</RelativeLayout>
