<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_settings_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"

        tools:context="com.example.stranger.me.fragment.SettingsFragment">

        <android.support.v7.widget.CardView
            android:id="@+id/settings_email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Email:"
                    android:textColor="#8A000000"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/action_change_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change" />

                    <ProgressBar
                        android:id="@+id/change_email_progress"
                        style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/settings_password_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Password"
                    android:textColor="#8A000000"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/action_password_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change" />

                    <ProgressBar
                        android:id="@+id/change_password_progress"
                        style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name:"
                    android:textColor="#8A000000"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="normal" />

                <com.example.stranger.me.widget.RobotoEditText
                    android:id="@+id/settings_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name:"
                    android:textColor="#8A000000"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="normal" />

                <com.example.stranger.me.widget.RobotoEditText
                    android:id="@+id/settings_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Description:"
                    android:textColor="#8A000000"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="normal" />

                <com.example.stranger.me.widget.RobotoEditText
                    android:id="@+id/settings_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Profile Image:"
                    android:textColor="#8A000000"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="normal" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.example.stranger.me.widget.CircleImageView
                        android:id="@+id/settings_image"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:textStyle="normal"
                        android:src="@drawable/ic_account_circle"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/action_change_profile_image"
                            android:text="Change"/>
                        <ProgressBar
                            android:id="@+id/change_profile_image_progress"
                            style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country:"
                    android:textColor="#8A000000"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="normal" />

                <AutoCompleteTextView
                    android:id="@+id/settings_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:singleLine="true" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <com.example.stranger.me.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your age:"
                    android:textColor="#8A000000"
                    android:textSize="@dimen/abc_text_size_large_material"
                    android:textStyle="normal" />

                <com.example.stranger.me.widget.RobotoEditText
                    android:id="@+id/settings_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textStyle="normal" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>

